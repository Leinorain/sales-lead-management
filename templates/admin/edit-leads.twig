{% extends "base.html.twig" %}

{% block title %}Index{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}

    <h2>Edit Lead</h2>
    <form method="POST" action="{{ url_for('lead.update', { id: lead.id }) }}">

        <div class="form-group row">
            <label 
                for="nameLabel"
                class="col-sm-2 col-form-label col-form-label"
            >
                Name
            </label>
            <div class="col-sm-10">
                <input
                    type="text"
                    name="name"
                    class="form-control form-control"
                    value="{{ lead.name }}"
                    id="nameLabel"
                    placeholder="col-form-label-sm"
                >
            </div>
        </div>
        
        <div class="form-group row">
            <label 
                for="contactNumberLabel"
                class="col-sm-2 col-form-label col-form-label"
            >
                Contact Number:
            </label>
            <div class="col-sm-10">
                <input
                    type="text"
                    name="contactNumber"
                    class="form-control form-control"
                    value="{{ lead.contactNumber }}"
                    id="contactNumberLabel"
                    placeholder="col-form-label-sm"
                >
            </div>
        </div>
        
        <div class="form-group row">
            <label 
                for="colFormLabelSm"
                class="col-sm-2 col-form-label col-form-label"
            >
                Email:
            </label>
            <div class="col-sm-10">
                <input
                    type="text"
                    name="email"
                    class="form-control form-control"
                    value="{{ lead.email }}"
                    id="emailLabel"
                    placeholder="col-form-label-sm"
                >
            </div>
        </div>
        
        <div class="form-group row">
            <label 
                for="productInterestLabel"
                class="col-sm-2 col-form-label col-form-label"
            >
                    Product Interest:
            </label>
            <div class="col-sm-10">
                <input
                    type="text"
                    name="productInterest"
                    class="form-control form-control"
                    value="{{ lead.productInterest }}"
                    id="productInterestLabel"
                    placeholder="col-form-label-sm"
                >
            </div>
        </div>

        <a href="{{ url_for('leads') }}">
            <button
                class="btn btn-danger"
            >
                <i class="fa fa-times" aria-hidden="true"></i>
                Close
            </button>
        </a>
        <button
            class="btn btn-primary"
            type="submit"
        >
            <i class="fa fa-pencil" aria-hidden="true"></i>
            Update Lead
        </button>
        
    </form>

{% endblock %}