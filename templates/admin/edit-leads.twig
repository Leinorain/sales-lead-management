{% extends "base.html.twig" %}

{% block title %}Index{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}

    <h2>Edit Lead</h2>
    <form method="POST" action="{{ url_for('lead.update', { id: lead.id }) }}">

        <div class="form-group row">
            <label 
                for="nameLabel"
                class="col-sm-2 col-form-label col-form-label"
            >
                Name
            </label>
            <div class="col-sm-10">
                <input
                    type="text"
                    name="name"
                    class="form-control form-control"
                    value="{{ lead.name }}"
                    id="nameLabel"
                    placeholder="Full Name"
                >
            </div>
        </div>
        
        <div class="form-group row">
            <label 
                for="contactNumberLabel"
                class="col-sm-2 col-form-label col-form-label"
            >
                Contact Number:
            </label>
            <div class="col-sm-10">
                <input
                    type="number"
                    name="contactNumber"
                    class="form-control form-control"
                    value="{{ lead.contactNumber }}"
                    id="contactNumberLabel"
                    placeholder="0912 345 6789"
                >
            </div>
        </div>
        
        <div class="form-group row">
            <label 
                for="colFormLabelSm"
                class="col-sm-2 col-form-label col-form-label"
            >
                Email:
            </label>
            <div class="col-sm-10">
                <input
                    type="email"
                    name="email"
                    class="form-control form-control"
                    value="{{ lead.email }}"
                    id="emailLabel"
                    placeholder="email@sample.com"
                >
            </div>
        </div>
        
        <div class="form-group row">
            <label 
                for="productInterestLabel"
                class="col-sm-2 col-form-label col-form-label"
            >
                    Product Interest:
            </label>
            <div class="col-sm-10">
                <input
                    type="text"
                    name="productInterest"
                    class="form-control form-control"
                    value="{{ lead.productInterest }}"
                    id="productInterestLabel"
                    placeholder="Product Interest"
                >
            </div>
        </div>

        <div class="form-group row">
            <label 
                for="productInterestLabel"
                class="col-sm-2 col-form-label col-form-label"
            >
                    Status:
            </label>
            <div class="col-sm-10">
                {# <input
                    type="text"
                    name="status"
                    class="form-control form-control"
                    value="{{ lead.status }}"
                    id="productInterestLabel"
                    placeholder="Status"
                > #}
                <select class="form-control" name="status" id="status">
                    <option value="New" {{ lead.status == 'New' ? 'selected' : '' }}>New</option>
                    <option value="Contacted" {{ lead.status == 'Contacted' ? 'selected' : '' }}>Contacted</option>
                    <option value="Closed" {{ lead.status == 'Closed' ? 'selected' : '' }}>Closed</option>
                    {# <option value="New">New</option>
                    <option value="Contacted">Contacted</option>
                    <option value="Closed">Closed</option> #}
                </select>
            </div>
        </div>

        <a href="{{ url_for('leads') }}">
            <button
                class="btn btn-danger"
            >
                <i class="fa fa-times" aria-hidden="true"></i>
                Close
            </button>
        </a>
        <button
            class="btn btn-primary"
            type="submit"
        >
            <i class="fa fa-pencil" aria-hidden="true"></i>
            Update Lead
        </button>
        
    </form>

{% endblock %}