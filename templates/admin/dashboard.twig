{% extends 'base.html.twig' %}

{% block title %}Index{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="container mt-4">
        <h1>Dashboard</h1>
        <div class="row mb-4">
            <!-- Total Lead Count & Count by Status -->
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Total Leads</h5>
                        <p class="card-text display-5">{{ totalCount }}</p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Leads by Status</h6>
                        <ul class="list-group list-group-flush">
                            <p><strong>New Leads:</strong> {{ newCount }}</p>
                            <p><strong>Contacted Leads:</strong> {{ contactedCount }}</p>
                            <p><strong>Closed Leads:</strong> {{ closedCount }}</p>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Leads for the Last 3 Months -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Leads in Last 3 Months</h5>
                        <ul class="list-group list-group-flush">
                            {% for month, count in monthlyLeads %}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    {{ month }}
                                    <span class="badge bg-success rounded-pill">{{ count }}</span>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Latest 3 Leads -->
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Latest 3 Leads</h5>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Product Interest</th>
                            <th>Status</th>
                            <th>Created At</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for lead in latestLeads %}
                            <tr>
                                <td>{{ lead.name }}</td>
                                <td>{{ lead.email }}</td>
                                <td>{{ lead.productInterest }}</td>
                                <td>{{ lead.status|capitalize }}</td>
                                <td>{{ lead.createdAt|date('Y-m-d') }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
