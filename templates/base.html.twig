                crossorigin="anonymous">
            </script>
        {% endblock %}
    </head>
    {# <body class="background-radial-gradient"> #}
    <body>
        {% block navbar %}  
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                    <a class="navbar-brand" href=" {{url_for('dashboard')}} ">Sales Lead Management System</a>
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href=" {{ url_for('dashboard') }} ">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href=" {{url_for('leads')}} ">Leads</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href=" {{url_for('pipeline')}} ">Pipeline</a>
                            </li>
                        </ul>
                    <form class="d-flex">
                        {# <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search"> #}
                        <button class="btn btn-outline-success" type="submit">
                            <a class="nav-link" href=" {{ url_for('logout') }} ">Logout</a>
                        </button>
                    </form>
                </div>
            </div>
        </nav>
        {% endblock %}


        <div id="content" class="container px-4 py-3 px-md-5 text-center text-lg-start my-5">{% block content %}{% endblock %}</div>
        
